<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notasImagenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:backgroundTint="@color/AzulSemiOscuro" android:padding="0sp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11sp" android:paddingBottom="14sp">

        <ImageView
                android:layout_width="232dp"
                android:layout_height="152dp"
                android:id="@+id/imagenNota"
                android:layout_marginTop="10dp"
                android:layout_marginStart="107dp"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="19dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_default"
        />
        <TextView
                android:id="@+id/textoNotaImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="start" android:textColor="@color/white"/>
        <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:src="@drawable/baseline_delete_24"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_gravity="end"/> <!-- Ajustado el margen entre las flechas -->

        <!-- Ajustado el margen entre las flechas -->

    </LinearLayout>
</androidx.cardview.widget.CardView>